
<% layout('layout/boilerplate') %>

<form action="/stations/addnew" method="post" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
    <div class="col-12">
        <label for="name" class="form-label">Name of the station</label>
        <input type="text" name="name" id="name" class="form-control" required>
    </div>
    <div class="col-12">
        <label for="des" class="form-label">Description of the station</label>
        <textarea name="description" id="des" cols="30" rows="5" class="form-control" required></textarea>
    </div>
    
    
    <div class="mb-3">
        <label for="formFile" class="form-label">Upload images</label>
        <input class="form-control" type="file" id="formFile" name="image" multiple>
    </div>
    
    <div class=" mb-3">
        <label for="price" class="form-label">Price of the station</label>
        <div class="input-group col-12">
            <span class="input-group-text">$</span>
            <input type="number" class="form-control" id="price" name="price" required>
        </div>
    </div>
    
    <div class="col-12">
        <label for="loc" class="form-label">Location of the station</label>
        <input type="text" name="location" id="loc" class="form-control" required>
    </div>

    <div class="col-12">
        <label for="fc" class="form-label">Fastcharging </label>
        <select name="fastcharging" id="fc" class="form-select" required>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="col-12">
        <button  class="btn btn-outline-success" >Add</button>
    </div>
</form>
<br>
<form action="/view" method="get" class="row g-3">
    <div class="col-12">
        <button class="btn btn-outline-success">Back</button>
    </div>
</form>


